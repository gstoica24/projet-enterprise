{% extends "base.html.twig" %}

{% block title %}Products
{% endblock %}

{% block content %}


	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">produit</th>
				<th scope="col">quantite</th>
				<th scope="col">prix</th>
				<th scope="col" class="action">action</th>
			</tr>
		</thead>

		<tbody>
			{% for produit in produits %}
				<tr>
					<th scope="row">{{produit.id}}</th>
					<td>
						{{produit.nom}}
					</td>
					<td>
						{{produit.quantite}}
					</td>
					<td>
						{{produit.prix}}â‚¬
					</td>
					<td>
						<a href="/products/restock-?id={{produit.id}}">
							<button type="button" class="btn btn-danger">Supr</button>
						</a>
						<a href="/product?id={{produit.id}}">
							<button type="button" class="btn btn-primary">Modify</button>
						</a>

						<a href="/products/restock+?id={{produit.id}}">
							<button type="button" class="btn btn-success">add10</button>
						</a>
					</td>
				</tr>
			{% endfor %}

		</tbody>
	</table>


{% endblock %}
