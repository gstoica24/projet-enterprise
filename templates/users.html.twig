{% extends "base.html.twig" %}
{% block title %}Users
{% endblock %}

{% block content %}


	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Nom</th>
				<th scope="col">Prenom</th>
				<th scope="col">Solde</th>
				<th scope="col">Email</th>

				<th scope="col">Admin?</th>
				<th scope="col" class="action">action</th>
			</tr>
		</thead>

		<tbody>
			{% for user in users %}
				<tr>
					<th scope="row">{{produit.id}}</th>
					<td>
						{{user.nom}}
					</td>
					<td>
						{{user.prenom}}
					</td>
					<td>
						{{user.solde}}
					</td>
					<td>
						{{user.email}}
					</td>
					<td>
						{% if user.is_admin == 0 %}
							False
						{% else %}
							True
						{% endif %}
					</td>
					<td>
						<a href="{% if user.is_admin == 0 %} /user/delete?id={{user.id}} {% endif %}">
							<button type="button" class="btn btn-danger">Remove</button>
						</a>
						<a href="/user?id={{user.id}}">
							<button type="button" class="btn btn-primary">Modify</button>
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
